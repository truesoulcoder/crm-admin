{
  "version": 2,
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": "true",
    "LD_LIBRARY_PATH": "/tmp/lib:/var/task/lib:/var/task/node_modules/@sparticuz/chromium-min/lib",
    "CHROME_EXECUTABLE_PATH": "/var/task/node_modules/@sparticuz/chromium-min/bin/chromium"
  },
  "functions": {
    "pages/api/eli5-engine/**/*.ts": {
      "maxDuration": 30,
      "memory": 1024,
      "runtime": "nodejs20.x"
    }
  },
  "build": {
    "env": {
      "NODE_ENV": "production",
      "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": "true"
    }
  }
}
